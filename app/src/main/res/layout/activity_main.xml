<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonClear"
                style="@style/buttonStyle2"
                android:onClick="buttonClear"
                android:text="CE" />

            <Button
                android:id="@+id/buttonPlusMinus"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="plusMinusOnClick"
                android:text="+/-" />

            <Button
                android:id="@+id/buttonPer"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="PerOnClick"
                android:text="%" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="divideOnClick"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button7"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b7OnClick"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b8OnClick"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b9OnClick"
                android:text="9" />

            <Button
                android:id="@+id/buttonIncrease"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="multiplyOnClick"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button4"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b4OnClick"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b5OnClick"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b6OnClick"
                android:text="6" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addOnClick"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/button1"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b1OnClick"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b2OnClick"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b3OnClick"
                android:text="3" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="subtractOnClick"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/dddd"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button0"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="b0OnClick"
                android:text="0" />

            <Button
                android:id="@+id/buttonPoint"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="pointOnClick"
                android:text="," />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/buttonStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="equalOnClick"
                android:text="=" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="388dp"
        android:layout_height="146dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"

        android:gravity="right|bottom"
        android:padding="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCalculations"
        android:layout_width="388dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="right"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>